{
  "name": "welltick-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "yarn@3.6.4",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "yarn workspaces foreach -A run clean && rimraf node_modules",
    "build": "yarn workspace @welltick/shared build && yarn workspace @welltick/contracts compile && yarn workspace @welltick/backend build",
    "build:frontend": "yarn workspace @welltick/frontend build",
    "dev": "concurrently \"yarn workspace @welltick/backend dev\" \"yarn workspace @welltick/frontend start\"",
    "dev:frontend": "yarn workspace @welltick/frontend start",
    "dev:backend": "yarn workspace @welltick/backend dev",
    "start": "yarn workspace @welltick/backend start",
    "test": "yarn workspaces foreach -A run test",
    "deploy:contracts": "yarn workspace @welltick/contracts deploy",
    "setup": "yarn install && yarn build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=3.0.0"
  }
}
